<h1>burgers!</h1>
<div class="row">

  <div class="col s6 m6">
    <div class="card">

      <div class="card-content">
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="card-action">
        <a href="#">This is a link</a>
      </div>
    </div>
  </div>

  <div class="col s6 m6">
    <div class="card">

      <div class="card-content">
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
      <div class="card-action">
        <a href="#">This is a link</a>
      </div>
    </div>
  </div>

</div>

<div class="row">
  <div class="col s6 m6">
    <div class="card">
      <div class="card-content">
        <h2>Add a burger</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="ca">burger Name:</label>
            <input type="text" id="ca" name="burger_name">
          </div>

          <div class="form-group">
            <label for="devoured">devoured?</label><br>
            <input type="radio" name="devoured" value="1" > devoured!<br>
            <input type="radio" name="devoured" value="0" checked> Awake
          </div>

          <button type="submit">Add burger</button>
        </form>

      </div>
      <div class="card-action">
        <a href="#">This is a link</a>
      </div>
    </div>
  </div>

</div>